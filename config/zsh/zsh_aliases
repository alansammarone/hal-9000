alias cl="bun run claude"
alias python="python3"
alias c="container"
alias p="podman"
alias nv="nvim"
alias getsong="yt-dlp -x --no-playlist --audio-format best --audio-quality 0 -o '~/Music/%(title)s.%(ext)s'"
alias getplaylist="yt-dlp -x --audio-format best --audio-quality 0 -o '~/Music/%(playlist)s/%(playlist_index)s - %(title)s.%(ext)s'"
alias t2="tree -L 2"
alias t3="tree -L 3"
alias ls="eza"
alias ll="eza -lah --group-directories-first"
alias llt="eza -lah --tree --level=2 --group-directories-first --total-size"
